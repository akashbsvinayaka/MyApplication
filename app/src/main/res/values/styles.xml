<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!--textview-->
    <style name="customTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="customViewAll" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/viewAllColor</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/viewall_bg</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="customCutPrice" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/viewAllColor</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="customProductType" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/viewAllColor</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="customProductTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="customProductPrice" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/priceColor</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="customOffer" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/offer_bg</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <!--recyclerview-->
    <style name="customRecyclerView">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
